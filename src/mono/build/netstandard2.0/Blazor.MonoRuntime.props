<Project>
  <PropertyGroup>
    <MonoLinkerPath>$(MSBuildThisFileDirectory)../../tools/illink/illink.exe</MonoLinkerPath>
    <MonoBaseClassLibraryPath>$(MSBuildThisFileDirectory)../../tools/mono/bcl/</MonoBaseClassLibraryPath>
    <MonoAsmjsRuntimePath>$(MSBuildThisFileDirectory)../../tools/mono/asmjs/</MonoAsmjsRuntimePath>
    <MonoWasmRuntimePath>$(MSBuildThisFileDirectory)../../tools/mono/wasm/</MonoWasmRuntimePath>  
    <AdditionalMonoLinkerOptions>-c link --skip-unresolved true</AdditionalMonoLinkerOptions>
    <BlazorRuntimeOutputPath>dist/_framework/</BlazorRuntimeOutputPath>
    <BlazorRuntimeBclOutputPath>dist/_framework/_bin/</BlazorRuntimeBclOutputPath>
    <BlazorRuntimeAsmjsOutputPath>dist/_framework/asmjs/</BlazorRuntimeAsmjsOutputPath>
    <BlazorRuntimeWasmOutputPath>dist/_framework/wasm/</BlazorRuntimeWasmOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <MonoBCLFile Include="$(MonoBaseClassLibraryPath)**/*.dll" />
    <MonoAsmjsFile Include="$(MonoAsmjsRuntimePath)**/*.*" />
    <MonoWasmFile Include="$(MonoWasmRuntimePath)**/*.*" />
  </ItemGroup>

  <ItemGroup>
    <BlazorRuntimeOutputFolder Include="$(BlazorRuntimeBclOutputPath)" />
    <BlazorRuntimeOutputFolder Include="$(BlazorRuntimeAsmjsOutputPath)" />
    <BlazorRuntimeOutputFolder Include="$(BlazorRuntimeWasmOutputPath)" />
  </ItemGroup>

</Project>